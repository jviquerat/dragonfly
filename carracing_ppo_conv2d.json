{
    "env": {
        "name": "CarRacing-v2",
        "obs_clip": false,
        "obs_norm": false,
	"obs_stack": 4,
        "obs_noise": 0.0
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "conv2d_3layers_32_32_64",
        "time": false
    },
    "n_avg": 3,
    "n_stp_max": 1000000,
    "trainer": {
        "style": "buffer",
        "buff_size": 4000,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 64,
        "render_every": 50000
    },
    "agent": {
        "type": "ppo",
        "policy": {
            "type": "normal",
            "network": {
                "type": "conv2d",
		"original_dim": [96,96,3,4],
                "trunk": {
                    "arch": [32,32],
		    "k_size": [8,4],
		    "strides": [4,2],
                    "actv": "relu"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[64],[64]],
                    "actv": ["relu","relu"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-4,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "conv2d",
		"original_dim": [96,96,3,4],
                "trunk": {
                    "arch": [32,32],
		    "k_size": [8,4],
		    "strides": [4,2],
                    "actv": "relu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[64]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.90,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
