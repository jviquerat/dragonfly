{
    "env": {
        "name": "burgers",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "rae",
        "time": false
    },
    "n_avg": 3,
    "n_cpu": 1,
    "n_stp_max": 200000,
    "trainer": {
        "style": "buffer",
        "buff_size": 2000,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 16,
        "rnd_style": "ascii",
        "render_every": 10000,
        "warmup": 10000
    },
    "agent": {
	      "srl": {
	          "type": "rae",
            "latent_dim": 10,
	          "update_freq": 10000,
	          "n_epochs" : 512,
            "n_updates": 10,
	          "batch_size": 100,
            "network": {
                "arch": [64,32],
                "actv": "relu"
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3
            },
            "loss": {
                "type": "mse_ae"
            }
	      },
        "type": "ppo",
        "policy": {
            "type": "normal",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [64],
                    "actv": "tanh"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[64],[64]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-4,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [64,64],
                    "actv": "relu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.99,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
