{
    "env": {
        "name": "CartPole-v0",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": false,
        "time": false
    },
    "n_avg": 3,
    "n_stp_max": 50000,
    "trainer": {
        "style": "buffer",
        "buff_size": 128,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 16,
        "render_every": 500
    },
    "agent": {
    	"srl": {
    		"type": "kpca",
    		"reduced_dim": 4
    	},
        "type": "ppo",
        "policy": {
            "type": "categorical",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [16,16],
                    "actv": "tanh"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["tanh"],
                    "final": ["softmax"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-4,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [16,16],
                    "actv": "selu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["selu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.95,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
