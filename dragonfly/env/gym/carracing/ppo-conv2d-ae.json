{
    "env": {
	"name": "CarRacing-v2",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0,
        "obs_grayscale": true,
        "obs_downscale": 4,
	"obs_stack": 4
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "conv2d_ae",
        "time": false
    },
    "n_avg": 2,
    "n_cpu": 1,
    "n_stp_max": 1000000,
    "trainer": {
        "style": "buffer",
        "buff_size": 4000,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 32,
        "render_every": 10000,
	"warmup": 10000
    },
    "agent": {
        "type": "ppo-srl",
        "srl": {
            "type": "cae",
	    "latent_dim" : 50,
	    "update_freq": 10000,
            "n_epochs" : 512,
            "n_updates": 1,
            "batch_size": 100,
            "network": {
		"original_dim": [24,24,4],
                "conv": {
                    "filters": [32],
                    "actv": "relu",
		    "kernel": 4,
		    "stride": 1
                },
                "fc": {
                    "arch": [18432],
                    "actv": "relu"
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3
            },
            "loss": {
                "type": "mse_ae"
            }
        },
	"policy": {
            "type": "normal",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [64],
                    "actv": "tanh"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[64],[64]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-4,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "fc",
                "trunk": {
                    "arch": [64,64],
                    "actv": "relu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.99,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
