{
    "env": {
        "name": "CarRacing-v2",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0,
        "obs_grayscale": true,
        "obs_downscale": 4,
	      "obs_stack": 4
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "cnn",
        "time": false
    },
    "n_avg": 2,
    "n_stp_max": 1000000,
    "trainer": {
        "style": "buffer",
        "buff_size": 4000,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 32,
        "render_every": 50000
    },
    "agent": {
        "type": "ppo",
        "policy": {
            "type": "normal",
            "network": {
                "type": "conv2d",
		            "original_dim": [24,24,4],
                "trunk": {
                    "filters": [8,16],
		                "kernel": 3,
		                "stride": 1,
                    "pooling": true,
                    "actv": "relu"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[64],[64]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.0
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "conv2d",
		            "original_dim": [24,24,4],
                "trunk": {
                    "filters": [8,16],
		                "kernel": 3,
		                "stride": 1,
                    "pooling": true,
                    "actv": "relu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[64]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.95,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
