{
    "env": {
        "name": "HalfCheetah-v4",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0,
	      "obs_max": 10.0
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "gae_0.95",
        "time": false
    },
    "n_avg": 10,
    "n_stp_max": 1000000,
    "trainer": {
        "style": "buffer",
        "buff_size": 4000,
        "n_buff": 1,
        "batch_frac": 0.25,
        "n_epochs": 32,
        "render_every": 5000
    },
    "agent": {
        "type": "ppo",
        "policy": {
            "type": "normal",
            "sigma": 0.5,
            "network": {
                "type": "fc",
                "k_init":  "orthogonal0",
                "k_final": "orthogonal1",
                "trunk": {
                    "arch": [64],
                    "actv": "tanh"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[64],[64]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "fc",
                "k_init":  "orthogonal0",
                "k_final": "orthogonal1",
                "trunk": {
                    "arch": [64,64],
                    "actv": "relu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.95,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
