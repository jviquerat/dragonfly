{
    "env": {
        "name": "CarRacing-v2",
        "obs_clip": false,
        "obs_norm": false,
	      "obs_stack": 4,
        "obs_grayscale": true,
        "obs_downscale": 2,
        "obs_noise": 0.0
    },
    "naming": {
        "env": true,
        "agent": true,
        "tag": "conv2d",
        "time": false
    },
    "n_avg": 2,
    "n_stp_max": 20,
    "trainer": {
        "style": "buffer",
        "buff_size": 20,
        "n_buff": 1,
        "batch_frac": 0.5,
        "n_epochs": 1,
        "render_every": 50
    },
    "agent": {
        "type": "ppo",
        "policy": {
            "type": "normal",
            "network": {
                "type": "conv2d",
		            "original_dim": [48,48,4],
                "trunk": {
                    "filters": [4,4],
		                "kernels": [3,3],
		                "stride": 1,
                    "actv": "tanh"
                },
                "heads": {
                    "nb": 2,
                    "arch": [[16],[16]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-4,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.2,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "conv2d",
		            "original_dim": [48,48,4],
                "trunk": {
                    "filters": [4,4],
		                "kernels": [3,3],
		                "stride": 1,
                    "actv": "selu"
                },
                "heads": {
                    "nb": 1,
                    "arch": [[16]],
                    "actv": ["selu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.90,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
