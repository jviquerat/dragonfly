{
    "env": {
        "name": "Pendulum-v1",
        "obs_clip": false,
        "obs_norm": true,
        "obs_noise": 0.0
    },
    "n_avg": 2,
    "n_stp_max": 500,
    "trainer": {
        "style": "buffer",
        "buff_size": 256,
        "n_buff": 16,
        "batch_frac": 0.5,
        "n_epochs": 16,
        "render_every": 50
    },
    "agent": {
        "type": "ppo",
        "policy": {
            "type": "normal",
            "network": {
                "type": "gated_fc",
                "trunk": {
                    "arch": [32,32],
                    "actv": "gelu"
                },
                "expansion_factor": 3,
                "heads": {
                    "nb": 2,
                    "arch": [[16],[16]],
                    "actv": ["tanh","tanh"],
                    "final": ["tanh","sigmoid"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 1.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "surrogate",
                "pol_clip": 0.1,
                "ent_coef": 0.01
            }
        },
        "value": {
            "type": "v_value",
            "network": {
                "type": "gated_fc",
                "trunk": {
                    "arch": [32,32],
                    "actv": "gelu"
                },
                "expansion_factor": 3,
                "heads": {
                    "nb": 1,
                    "arch": [[]],
                    "actv": ["relu"],
                    "final": ["linear"]
                }
            },
            "optimizer": {
                "type": "adam",
                "lr": 5.0e-3,
                "grd_clip": 0.1
            },
            "loss": {
                "type": "mse_pg"
            }
        },
        "retrn": {
            "type": "gae",
            "gamma": 0.99,
            "gae_lambda": 0.99,
            "ret_norm": true
        },
        "termination": {
            "type": "bootstrap"
        }
    }
}
